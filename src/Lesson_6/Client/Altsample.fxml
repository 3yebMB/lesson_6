<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Lesson_6.Client.Controller">

    <HBox fx:id="upperPanel">
        <TextField fx:id="loginField" promptText="Логин" HBox.hgrow="ALWAYS" />
        <PasswordField fx:id="passwordField" onAction="#tryToAuth" promptText="Пароль" />
        <Button onAction="#tryToAuth" text="Войти" />
    </HBox>

	<HBox VBox.vgrow="ALWAYS">
		<VBox HBox.hgrow="ALWAYS">
         <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
           <tabs>
             <Tab text="Main">
                  <content>						  
            			<TextArea fx:id="textArea" editable="false" />
                  </content>
               </Tab>
           </tabs>
         </TabPane>
			<HBox fx:id="bottomPanel" managed="false" visible="false">
			<TextField fx:id="textField" onAction="#sendMsg" promptText="Введите текст" HBox.hgrow="ALWAYS" />
			<Button fx:id="btn1" onAction="#sendMsg" text="Send" />
			</HBox>		   
		</VBox>
				<ListView fx:id="clientList" managed="false" visible="false" />
    </HBox>
</VBox>
